<% if product  %>
    <tr>
      <td>
        <%= image_tag product.image.tiny %>
      </td>
      <td>
        <h4><%= product.name %></h4>
        <br>
        <p><%= truncate product.description %></p>
      </td>
      <td>
        <%= product.price %>
      </td>
      <td>
          x <%= @order.line_items.find_by(:product => product).quantity %>
      </td>
    </tr>
<% end %>