<h1>Login</h1>

<div class="login">

  <%= form_tag '/login' do %>
  
    <div class="form-group">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>

    <div class="form-group">
      <%= label_tag :password %>
      <%= text_field_tag :password %>
    </div>

  <%= form.submit 'Login' %>

<% end %>
</div>
